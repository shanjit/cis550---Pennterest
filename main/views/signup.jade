extends layout

block content
        div.container-fluid
                div.row-fluid(align="Center")
                        div.well.span4.offset4
                                h1 Create an account 
                                h5 Tell us a bit about yourself!
                                - if (typeof (locals.emsg) !=='undefined')
                                    div.alert.alert-error(align="center")
                                      subheading=locals.emsg
                                
                                form( method="post", parsley-validate)#signup-form
                                      label What is your First Name? 
                                      input(type="text", name="fname", id='fname-tf', autofocus="true", required)
                                      label What is your Last Name? 
                                      input(type="text", name="lname", id='lname-tf', required)
                                      label What is your Affiliation?
                                      input(type="text", name="aff", id='aff-tf', required)
                                      label Enter your Email Address
                                      input(type="email", name="user", id='user-tf', required, parsley-trigger="change")
                                      label Password:
                                      input(type="password", name="pass1", id='pass1-tf' required)
                                      label Confirm Password
                                      input(type="password", name="pass2", id='pass2-tf' required)
                                      hr
                                      button(type="submit")#btn-signup.btn.btn-primary
                                        i.icon-lock.icon-white
                                        | Create Account
